

LXI B,03E8H
MVI D,00H

START:	LDA 2000H
	ANI 0FH
	MOV E,A
	CALL CHECK
INC:	MOV A,D
	CMA
	STA 3000H
	CALL DELB
	CALL CHECK
	INR D
	MOV A,D
	CMP E
	JC INC
DEC:	MOV A,D
	CMA
	STA 3000H
	CALL DELB
	CALL CHECK
	DCR D
	JNZ DEC
	JMP START



CHECK:	LDA 2000H
	ANI 80H
	CPI 80H
	JNZ CHECK
	RET

END		